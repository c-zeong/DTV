{
  "name": "dtv",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc && vite build",
    "watch": "tsc -w",
    "dev": "vite",
    "compile": "tsc",
    "electron-dev": "npm run compile && wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "start-dev": "concurrently \"npm run dev\" \"npm run electron-dev\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "test:douyu": "ts-node src/services/__tests__/douyu.test.ts",
    "test:danmaku": "ts-node src/services/__tests__/danmaku.test.ts"
  },
  "build": {
    "appId": "com.yourdomain.dtv",
    "productName": "DTV",
    "mac": {
      "category": "public.app-category.entertainment",
      "icon": "build/icon.icns",
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": ["AppImage"]
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "asar": true,
    "compression": "maximum",
    "generateUpdatesFilesForAllChannels": false,
    "publish": null
  },
  "dependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node-fetch": "^2.6.12",
    "@types/ws": "^8.5.13",
    "artplayer": "^5.2.1",
    "artplayer-plugin-danmuku": "^5.1.4",
    "jsdom": "^25.0.1",
    "mpegts.js": "^1.8.0",
    "node-fetch": "^2.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.18.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.12",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vite": "^5.0.12",
    "wait-on": "^8.0.1"
  }
}
